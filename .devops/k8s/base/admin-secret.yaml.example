apiVersion: v1
kind: Secret
metadata:
  name: medisynth-admin-config
  namespace: medisynth-io
type: Opaque
data:
  # Base64 encoded admin emails (comma-separated)
  # To encode: echo -n "greg@hndrx.co,other@admin.com" | base64
  # Example: echo -n "admin@example.com" | base64
  ADMIN_EMAILS: <BASE64_ENCODED_ADMIN_EMAILS_HERE>

# Instructions:
# 1. Copy this file to admin-secret.yaml
# 2. Replace <BASE64_ENCODED_ADMIN_EMAILS_HERE> with actual base64 encoded emails
# 3. Apply to cluster: kubectl apply -f admin-secret.yaml
# 4. Never commit the actual admin-secret.yaml file (it's in .gitignore) 